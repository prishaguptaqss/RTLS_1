# Database Configuration
DATABASE_URL=postgresql://rtls_user:your_password@localhost:5432/rtls_db

# Server Configuration
HOST=0.0.0.0
PORT=3000

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Missing Person Detection
MISSING_PERSON_THRESHOLD_SECONDS=300
MISSING_PERSON_CHECK_INTERVAL_SECONDS=30

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL_SECONDS=30

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# Optional: API Key for Python service authentication (future feature)
PYTHON_SERVICE_API_KEY=
